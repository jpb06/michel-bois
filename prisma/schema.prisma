datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// User realm

model User {
  id String @id @default(uuid()) @db.Uuid

  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  password Password?
  Comment  Comment[]
}

model Password {
  hash String

  idUser String @unique @db.Uuid

  user User @relation(fields: [idUser], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Comment {
  id String @id @default(uuid()) @db.Uuid

  idDocument String @db.Uuid
  idUser     String @db.Uuid

  content String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  asset Document @relation(fields: [idDocument], references: [id])
  user  User     @relation(fields: [idUser], references: [id])
}

// Documents realm

model Document {
  id String @id @default(uuid()) @db.Uuid

  documentKey        String
  placeholderDataUri String
  month              Int?
  year               Int?
  name               String
  description        String?
  width              Int
  height             Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Comment Comment[]
}

model DocumentTag {
  idDocument String @db.Uuid
  idTag      String @db.Uuid

  @@id([idDocument, idTag])
}

model Tag {
  id String @id @default(uuid()) @db.Uuid

  name String
}
